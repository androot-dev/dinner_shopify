    },
    {
        "type": "text",
        "id": "title-section",
        "label": "Title Section",
        "default": "Best Sellers"
    },
    {
        "type": "text",
        "id": "subtitle-section",
        "label": "Subtitle Section",
        "default": "Our Best Dishes"
    },
    {
        "type": "richtext",
        "id": "description",
        "label": "Description Section"
    },
    {
        "type": "image",
        "id": "image",
        "label": "Image About"        
    },
    {
      "type": "header",
      "content": "Custom Colors"
    },
    {
        "id": "background-color",
        "type": "color",
        "label": "Background Color"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks":[
    {
        "type": "button",
        "name": "button",
        "limit": 1,
        "settings": [
            {
                "type": "text",
                "id": "button_label",
                "default": "Button label",
                "label": "Button text"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Button_link"
            }
        ]
    }
]
  "presets": [
    {
      "name": "Custom Section"
    }
  ]
}
{% endschema %}
