<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding my-section container-fluid m-0 p-0 d-flex flex-wrap bg-footer text-white">
  <div class="row w-100 py-5 m-0">

    {% if section.settings.logo %}
      <div class="col-md-4 col-12 ">
          <div class="row justify-content-center">
              <div class="my-logo"> </div>
          </div>
          
          <div class="row justify-content-center">
            {% for block in section.blocks %}
              {% if block.type == "social_links" %}
              <a class="px-2" href="{{block.settings.url}}" target="_blank">
                  <i class="bx {{block.settings.icon}}"></i>
              </a>
            {% endif %}
          {% endfor %}
          </div>

      </div>
    {% endif %}

      {% for block in section.blocks %}
        {% if block.type == 'quick_links' %}
      <div class="col-md-3 col-12 container-quick-links d-md-block d-flex justify-content-center">
          <div class="container-menu-footer pt-3">
              <h2 class="text-md-left text-center">{{block.settings.heading}}</h2>
              <ul class="quick-links">
                
              {% for link in block.settings.menu %}
                    <li>
                        <a href="{{link.url}}">{{link.title}}</a>
                    </li>
              {% endfor %}
            </ul>
          </div>
      </div>
        {% endif %}
      {% endfor %}

      <div class="col-md-5 col-12 container-more-footer pt-3 d-md-block d-flex justify-content-center">
          <div class="container-menu-footer">
              <h2 class="text-md-left text-center">More Information</h2>
              <ul>
                {% for block in section.blocks %}
                  {% if block.type == 'more_information' %}
                  <li class="d-flex pr-md-5 pt-3 justify-content-center justify-content-md-start  align-items-center">
                    <i class="bx fa {{ block.settings.icon }}"></i>
                    <a target="_blank" href="{{ block.settings.url }}">
                          {{ block.settings.label }}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
              </ul>
          </div>
      </div>

  </div>
  <div class="copyright row m-0 justify-content-around align-items-center ">
      <span>Copyright Â© 2022 All rights reserved | This Website Was Designed And Developed by</span>
      <a href="https://josesilvera.com/" target="_blank"> <img class="logoSilvera" alt="author page logo"
              src="{{ "silvera.png" | asset_url }}"></a>
  </div>
</footer>

{% schema %}
{
	"name": "t:sections.footer.name",
	"blocks": [{
			"type": "quick_links",
			"name": "Quick Links",
      "limit": 1,
			"settings": [{
					"type": "text",
					"id": "heading",
					"default": "Quick links",
					"label": "t:sections.footer.blocks.link_list.settings.heading.label",
					"info": "t:sections.footer.blocks.link_list.settings.heading.info"
				},
				{
					"type": "link_list",
					"id": "menu",
					"default": "footer",
					"label": "t:sections.footer.blocks.link_list.settings.menu.label",
					"info": "t:sections.footer.blocks.link_list.settings.menu.info"
				}
			]
		},
		{
			"type": "more_information",
			"name": "More Information",
			"limit": 4,
			"settings": [{
					"type": "url",
					"id": "url",
					"label": "Link"
				},
				{
					"type": "text",
					"id": "label",
					"label": "label"
				},
				{
					"type": "text",
					"id": "icon",
					"label": "Boxi Icon or Font Awesome Icon"
				}
			]
		},
		{
			"type": "social_links",
			"name": "Social Links",
			"limit": 5,
			"settings": [{
					"type": "text",
					"id": "icon",
					"label": "Boxi Icon"
				},
				{
					"type": "url",
					"id": "url",
					"label": "Link"
				}
			]
		}
	],
	"settings": [{
			"type": "image_picker",
			"id": "logo",
			"label": "select your logo"

		},
		{
			"type": "color_background",
			"id": "background_color",
			"label": "Background Footer"
		},
		{
			"type": "header",
			"content": "t:sections.all.spacing"
		},
		{
			"type": "range",
			"id": "margin_top",
			"min": 0,
			"max": 100,
			"step": 4,
			"unit": "px",
			"label": "t:sections.footer.settings.margin_top.label",
			"default": 0
		},
		{
			"type": "header",
			"content": "t:sections.all.padding.section_padding_heading"
		},
		{
			"type": "range",
			"id": "padding_top",
			"min": 0,
			"max": 100,
			"step": 4,
			"unit": "px",
			"label": "t:sections.all.padding.padding_top",
			"default": 36
		},
		{
			"type": "range",
			"id": "padding_bottom",
			"min": 0,
			"max": 100,
			"step": 4,
			"unit": "px",
			"label": "t:sections.all.padding.padding_bottom",
			"default": 36
		}
	]
}
{% endschema %}
