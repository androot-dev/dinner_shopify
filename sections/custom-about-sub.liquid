{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
}
.section-{{ section.id }} {
  background-color: {{ section.settings.background-color }};
  height:auto;
}
@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

@media (max-width: 767px) {
  .about-us p {
    padding-bottom: 30px;
  }
}

.about-us:after {
    
  background-image: url("{{ section.settings.image_background_overlay | img_url : "master"}}") !important;
}

@media (max-width: 575px) {
  .about-us {
    padding: 50px 5%;
  }
}

.about-us .title-section {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
      -ms-flex-direction: row;
          flex-direction: row;
  -ms-flex-wrap: nowrap;
      flex-wrap: nowrap;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
}

.about-us .images-about-container {
  position: relative;
  height: 230px;
  width: 230px;
  min-width: 200px;
}

@media (max-width: 767px) {
  .about-us .images-about-container {
    margin: 15% 0;
  }
}

@media (max-width: 368px) {
  .about-us .images-about-container {
    width: 180px;
    height: 180px;
    min-width: 180px;
  }
}

.about-us .images-about {
  height: 100%;
  width: 100%;
  position: absolute;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
  background: var(--primary-dark);
  margin-right: 10px;
}

.about-us .images-about:first-child {
  z-index: 1;
  left: -60px;
  top: -60px;
}

@media (max-width: 575px) {
  .about-us .images-about:first-child {
    left: -30px;
    top: -40px;
  }
}

.about-us .images-about:nth-child(2) {
  z-index: 2;
  right: -60px;
  bottom: -60px;
}

@media (max-width: 575px) {
  .about-us .images-about:nth-child(2) {
    right: -60px;
    bottom: -40px;
  }
}

.about-us .images-about img {
  width: 100%;
  height: 98%;
  margin-top: -3px;
  margin-left: -5px;
  -o-object-fit: cover;
     object-fit: cover;
  -o-object-position: center;
     object-position: center;
}

{%- endstyle -%}

  <section class="section-{{ section.id }}-padding section-{{ section.id }}  my-section container-fluid position-relative about-us overlay-med-left">
    <div class="row">
        <div class="col-md-6 col-12  order-2 order-md-1 d-flex align-items-center justify-content-center ">
            <div class="images-about-container">
               {% if  section.settings.image_1 != blank %}
                <div class="images-about">
                    <img src="{{ section.settings.image_1 }}">
                </div>
            {% endif %}
            {% if  section.settings.image_2 != blank %}
                <div class="images-about">
                    <img src="{{ section.settings.image_2 }}">
                </div>
            {% endif %}

            </div>
        </div>
        <div class="col-12 col-md-6 order-1 order-md-2 pl-4 ">
            <h1 class="mx-0 title-section row justify-content-md-start">{{section.settings.title-section}}</h1>
            <h2 class="mx-0 title row justify-content-md-start justify-content-center">
                {{section.settings.subtitle-section}}
            </h2>
            <p>{{section.settings.description}}</p>
            {% if section.settings.button_text != blank and section.settings.button_link != blank %} 
           
            <div class="pt-5 d-none d-md-flex justify-content-end pr-5">
                <a  role="button"
                    href="{{section.settings.button_link}}"
                    class="btn-primary">{{section.settings.button_text}}
                </a>
            </div>
           {% endif; %}
          
        </div>
        {% if section.settings.button_text != blank and section.settings.button_link != blank %} 
           
            <div class="pt-5 order-3 m-0 w-100 d-flex d-md-none row justify-content-center">
                <a  role="button"
                    href="{{section.settings.button_link}}"
                    class="btn-primary">{{section.settings.button_text}}
                </a>
            </div>
           {% endif; %} 
    </div>
  </section>

{% schema %}
{
  "name": "Custom About Sub",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "text",
        "id": "title-section",
        "label": "Title Section",
        "default": "About Us"
    },
    {
        "type": "text",
        "id": "subtitle-section",
        "label": "Subtitle Section",
        "default": "Our History"
    },
    {
        "type": "richtext",
        "id": "description",
        "label": "Ddescription"
    },
    {
        "type": "image_picker",
        "id": "image_1",
        "label": "Select a Image 1"
    },
    {
        "type": "image_picker",
        "id": "image_2",
        "label": "Select a Image 2"
    },
    {
        "type": "image_picker",
        "id": "image_background_overlay",
        "label": "Select a Image the overlay" 
    },
    {
      "type": "header",
      "content": "Custom Colors"
    },
    {
        "id": "background-color",
        "type": "color",
        "label": "Background Color"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
        "type": "header",
        "content": "Button action"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "View Menu"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }
  ],
  "presets": [
    {
      "name": "Custom About Sub"
    }
  ]
}
{% endschema %}
