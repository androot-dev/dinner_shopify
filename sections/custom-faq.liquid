{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
}
.section-{{ section.id }} {
  background-color: {{ section.settings.background-color }};
  height:auto;
}
@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

.faq i {
  -webkit-transition: all 0.1s ease-in-out;
  transition: all 0.1s ease-in-out;
}

.faq .card {
  border-radius: 0 !important;
  background: none;
  border: none;
  margin-top: 5px;
}
.faq .title-section:before {
    content: "";
    background: #FF9900;
    width: 80%;
    height: 2px;
    position: absolute;
    width: 20%;
    bottom: 0px;
    z-index:4;

  }
  @media (max-width: 575px) {
 .faq .title-section:before {
    display: none;
  }
}
.faq .card-header {
  border: 1px solid #e7e7e700;
  background: rgba(255, 255, 255, 0.89);
  -webkit-transition: background-color 0.3s linear;
  transition: background-color 0.3s linear;
  margin: 0px;
  border-radius: 0 !important;
}

.faq .card-header a {
  cursor: pointer;
}

.faq .card-header a:hover {
  color: black !important;
}

.faq .card-body, .faq .collapse {
  border-radius: 0 !important;
  background: none;
}
.overlay-med-left {
  position: relative;
}

.overlay-med-left::after {
  height: 100%;
  width: 25%;
  background-color: var(--primary);
  opacity: 0.1;
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  max-width: 200px;
  min-width: 60px;
  z-index: -2;
}

.overlay-med-left::before {
  height: 100%;
  width: 14%;
  background-color: var(--primary);
  opacity: 0.1;
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  max-width: 130px;
  min-width: 50px;
  z-index: -2;
}

.overlay-med-right::after {
  height: 100%;
  width: 30%;
  background-color: var(--primary);
  opacity: 0.3;
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  min-width: 150px;
  z-index: -2;
}

#accordion li::before {
            content: "";
            background: #D88100;
            display: inline-block;
            font-size: 50px;
            width: 11px;
            height: 11px;
            margin-right: 8px;
        }
        
        #accordion li,
        #accordion p,
        #accordion a {
            font-size: 1em;
            color: black;
        }
        
        #accordion a:hover {
            color: #FF9900;
        }

{%- endstyle -%}

  <section class="section-{{ section.id }}-padding section-{{ section.id }}  p-sm-5 p-2 pb-5 m-0 faq my-section container-fluid position-relative overlay-med-left">
    <h3 class="text-center title-section position-relative d-flex justify-content-center">{{section.settings.title-section}}</h3>
    <h1 class="text-center title px-5 mb-3">
       {{section.settings.subtitle-section}}
    </h1>

    <div id="accordion">
        {% for block in section.blocks %}
            {% if block.type == "faq-item" %}
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0 text-primary-small">
                    <a class=" color-secondary hover_a" data-toggle="collapse"
                        data-target="#collapse{{forloop.index}}" aria-expanded="true" aria-controls="collapseOne">
                        <i class=" bx bxs-down-arrow pr-3"></i> {{block.settings.question}}
                    </a>
                </h5>
            </div>

            <div id="collapse{{forloop.index}}" class="collapse" aria-labelledby="headingOne"
                data-parent="#accordion">
                <div class="card-body color-secondary text-primary-small">
                    {{block.settings.answer}}
                </div>
            </div>
        </div>
            {% endif %}
        {% endfor %}
    </div>
  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js"
    integrity="sha384-VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous">
  </script>

{% javascript %}
$('.collapse').on('hidden.bs.collapse', function(evt) {
    let header = evt.currentTarget.parentNode.querySelector('.card-header');
    let i = evt.currentTarget.parentNode.querySelector('i');
    let a = evt.currentTarget.parentNode.querySelector('a');
    i.style.transform = "scaleY(1)";
    header.classList.remove('bg-primary');
    header.classList.add('bg-light');
})
$('.collapse').on('shown.bs.collapse', function(evt) {
    let header = evt.currentTarget.parentNode.querySelector('.card-header');

    let i = evt.currentTarget.parentNode.querySelector('i');
    let a = evt.currentTarget.parentNode.querySelector('a');
    i.style.transform = "scaleY(-1)";
    header.classList.remove('bg-light');
    header.classList.add('bg-primary');
})

{% endjavascript %}
{% schema %}
{
  "name": "Custom FAQs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "text",
        "id": "title-section",
        "label": "Title Section",
        "default": "FAQs"
    },
    {
        "type": "text",
        "id": "subtitle-section",
        "label": "Subtitle Section",
        "default": "Frequent questions"
    },
    {
      "type": "header",
      "content": "Custom Colors"
    },
    {
        "id": "background-color",
        "type": "color",
        "label": "Background Color"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks":[
    {
        "type": "faq-item",
		"name": "Question",
        "settings": [
            {
                "type": "text",
                "id": "question",
                "label": "Question",
                "default": "Your question here"
            },
            {
                "type": "richtext",
                "id": "answer",
                "label": "Answer"
 
            }
        ]
    }
 ],
  "presets": [
    {
      "name": "Custom FAQs"
    }
  ]
}
{% endschema %}
