{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
}
.section-{{ section.id }} {
  background-color: {{ section.settings.background-color }};
  height:auto;
}
@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}
{%- endstyle -%}

  <section class="section-{{ section.id }}-padding section-{{ section.id }}  p-sm-5 p-2 pb-5 m-0 faq my-section menu-food container-fluid position-relative overlay-med-left">
    <h3 class="text-center title-section">{{section.settings.title-section}}</h3>
    <h1 class="text-center title px-5 mb-3">
       {{section.settings.subtitle-section}}
    </h1>

    <div id="accordion">
        {% for block in section.blocks %}
            {% if block.type == "" %}
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <a class="text-primary-normal color-secondary hover_a" data-toggle="collapse"
                        data-target="#collapse<?php echo $count; ?>" aria-expanded="true" aria-controls="collapseOne">
                        <i class=" bx bxs-down-arrow pr-3"></i> <?php the_sub_field( 'question' ); ?>
                    </a>
                </h5>
            </div>

            <div id="collapse<?php echo $count; ?>" class="collapse" aria-labelledby="headingOne"
                data-parent="#accordion">
                <div class="card-body color-secondary text-primary-small">
                    <?php the_sub_field( 'response' ); ?>
                </div>
            </div>
        </div>

        <?php endwhile; ?>
        <?php endif; ?>
    </div>
  </section>
{% schema %}
{
  "name": "Custom FAQs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "text",
        "id": "title-section",
        "label": "Title Section",
        "default": "FAQs"
    },
    {
        "type": "text",
        "id": "subtitle-section",
        "label": "Subtitle Section",
        "default": "Frequent questions"
    },
    {
      "type": "header",
      "content": "Custom Colors"
    },
    {
        "id": "background-color",
        "type": "color",
        "label": "Background Color"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks":[
    {
        "type": "faq-item",
        "label": "Question",
        "settings": [
            {
                "type": "text",
                "id": "question",
                "label": "Question",
                "default": "Your question here"
            },
            {
                "type": "text",
                "id": "answer",
                "label": "Answer",
                "default": "Your answer here"
            }
        ]
    }
 ],
  "presets": [
    {
      "name": "Custom FAQs"
    }
  ]
}
{% endschema %}
