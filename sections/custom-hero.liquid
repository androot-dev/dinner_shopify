{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
}
.section-{{ section.id }} {
  background: {{ section.settings.background-color }};
  height:auto;
}
@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}
{%- endstyle -%}

  <section class="my-section hero section-{{ section.id }}-padding section-{{ section.id }}">
    
        <video autoplay="autoplay" class="video-background" loop="loop" muted playsinline="playsinline"
            src="{{ section.settings.video-hero }}"></video>
        <div class="hero-action">
            <div class="text">
                <h1 class="first-text"><?php the_field( 'line_title_1' ); ?></h1>
    
                <div class="container-text">
                    <h1 class="second-text"><?php the_field( 'line_title_2' ); ?></h1>
                </div>
            </div>
            <?php $btn_action = get_field( 'btn_action' ); ?>
            <?php if ( $btn_action ) : ?>
            <a target="<?php echo esc_attr( $btn_action['target'] ); ?>" role="button"
                href="<?php echo esc_url( $btn_action['url'] ); ?>"
                class="btn-primary"><?php echo esc_html( $btn_action['title'] ); ?></a>
            <?php endif; ?>
        </div>
    
        <div class="social-bar">
            <h2 class="large-text"><?php the_sub_field( 'banner_text' ); ?></h2>
            <?php if ( have_rows( 'social_bar' ) ) : ?>
            <ul>
                <?php while ( have_rows( 'social_bar' ) ) : the_row(); ?>
                <li><a target="_blank"
                        href="<?php the_sub_field( 'link' ); ?>"><?php the_sub_field( 'red_social' ); ?></a></li>
                <?php endwhile; ?>
            </ul>
            <?php endif; ?>
        </div>
    
        <?php endwhile; ?>
        <?php endif; ?>
  </section>
  

