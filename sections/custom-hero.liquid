{% schema %}
{
    "name": "Custom Principal Hero",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "header",
            "content": "Custom Fileds"
        },
        {
            "id": "background-color",
            "type": "background_color",
            "label": "Background Color"
        },
        {
            "id": "line-title-1",
            "type": "text",
            "label": "Line Title 1",
            "default": "ONLY GIVE THE BEST"
        },
        {
            "id": "line-title-2",
            "type": "text",
            "label": "Line Title 2",
            "default": "TO YOUR PALATE"
        },
        {
            "id": "banner-text",
            "type": "text",
            "label": "Banner Text",
            "default": "DELICIOUS FOOD"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 40
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 52
        }
    ],
    "blocks": [
        {
            "type": "button",
            "name": "button",
            "limit": 1,
            "settings": [
                {
                    "type": "text",
                    "id": "button_label",
                    "default": "Button label",
                    "label": "Button text"
                },
                {
                    "type": "url",
                    "id": "button_link",
                    "label": "Button_link"
                }
            ]
        },
        {
            "type": "text",
            
			"name": "Social Item",
            "limit": 5,
            "settings": [
                {
                    "type": "text",
                    "id": "social_label",
                    "default": "Facebook",
                    "label": "Red Social"
                },
                {
                    "type": "url",
                    "id": "social_link",
                    "label": "Social Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Custom Principal Hero"
        }
    ]
}
{% endschema %}
